
<section class="container small-12 medium-10 large-10 large-offset-2 columns" id="show">
<h1><%= @article.title %></h1>

<p><%= @article.content %></p>


<h4>Liste des commentaires</h4>

<% @comments.each do |comment| %>
        <% unless (comment.content).empty? or (comment.author).empty? %>
            <strong><%= comment.author %></strong> 
            <p><%= comment.content %></p>
            <br/>
        <% end %>
<% end %>


<%= paginate @comments %>


<h4>Réagir à cet article</h4>

<%= form_tag "/articles/#{@article.id}", method: "post" do %>
    
    <p class="container small-10 medium-10 large-10 columns"><%= text_field_tag :author, "", :placeholder => "Auteur" %></p>
    <p class="container small-10 medium-10 large-10 columns"><%= text_area_tag :content, "", :placeholder => "Commentaire" %></p>
    <input type="submit" class="button" value="Ajouter un commentaire">
<%  end %>

<p><a href="/">Retour à la liste des articles</a></p>
</section>